<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_thumbal"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/Black"/>

    <TextView
        android:layout_toRightOf="@+id/img_thumbal"
        android:id="@+id/tv_url"
        android:text="https://www.youtube.com/watch?v=5Hx7s17BDH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:autoText="false"
        android:minLines="1" />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/img_thumbal"
        android:text="Steve Jobs introduces iPhone 4  FaceTime - WWDC (2010)"
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:autoText="false"
        android:minLines="1" />

        <Button
            android:layout_toLeftOf="@+id/btn_item_share"
            android:id="@+id/btn_item_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_delete_black_24dp"/>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_item_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_share_black_24dp"/>

</RelativeLayout>
    <View
        android:layout_below="@id/btn_item_share"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />
</LinearLayout>